{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell: Debug Current Script",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell: Debug PatchManager Module",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Test-EnhancedPatchManager.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell: Debug Runner Script",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/pwsh/runner.ps1",
            "args": [
                "-Scripts",
                "0006,0007,0008,0009"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell: Debug Pester Tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "Invoke-Pester",
            "args": [
                "-Path",
                "${workspaceFolder}/tests/",
                "-Output",
                "Detailed",
                "-PassThru"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/py"
            }
        },
        {
            "name": "Python: Debug Lab Control CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "labctl",
            "args": [
                "--help"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/py"
            }
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/py/tests/",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/py"
            }
        }
    ]
}